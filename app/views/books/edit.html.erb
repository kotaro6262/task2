<h1>Editing Book</h1>
<% if @book.errors.any? %>
<h2>
  <%= @book.errors.count %> errors prohibited this book from being saved:
</h2>

  <% @book.errors.full_messages.each do |message| %>
  <ul>
    <li>
      <%= message %>
    </li>
  </ul>
   <% end %>
<% end %>
<%= form_with model:@book do |f| %>

  <h4>Title</h4>
    <%= f.text_field :title %>

  <h4>Body</h4>
    <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>


    <%= link_to "Show", book_path(@book.id) %><span>|</span><%= link_to "Back", "/books" %>

<% end %>